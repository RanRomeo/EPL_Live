<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Comment_box"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#fff"

    android:padding="5dp"
    >

    <LinearLayout
        android:layout_marginTop="5dp"
        android:weightSum="1"
        android:paddingBottom="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <TextView
            android:id="@+id/comment_time"
            android:text="90'+1"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/comment_img"
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            />


        <LinearLayout
            android:layout_weight="0.7"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/comment_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:padding="9dp"
                android:text="Attempt missed. Dejan Lovren (Croatia) header from the centre of the box is close, but misses to the left. Assisted by Luka Modric with a cross following a corner."
                />






            <LinearLayout
                android:id="@+id/Goal_view"
                android:gravity="center"
                android:visibility="visible"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/goal_playerView"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:visibility="gone"
                    android:src="@drawable/missing_thumb"
                    />

                <TextView
                    android:id="@+id/goal_player_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:padding="6dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />


                <ProgressBar
                    android:id="@+id/player_progress"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:visibility="gone"
                    />



            </LinearLayout>



        </LinearLayout>


    </LinearLayout>



</android.support.v7.widget.CardView>
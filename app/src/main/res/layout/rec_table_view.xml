<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_table"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:weightSum="6"
    >

    <TextView
        android:id="@+id/group_team_no"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:text="5"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="match_parent" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.5"

        >

        <ImageView
            android:id="@+id/team_image"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_logo_arsenal_club"
            android:padding="5dp"
            />


        <TextView
            android:id="@+id/group_team_name"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:text="Korean  Republic"
            android:maxLines="1"
            android:textColor="#000000"
            android:textAlignment="textStart"
            android:gravity="start|center"
            android:layout_height="match_parent" />



    </LinearLayout>


    <TextView
        android:id="@+id/group_team_P"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:text="00"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/group_team_W"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:text="00"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/group_team_D"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:text="00"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="match_parent" />





    <TextView
        android:id="@+id/group_team_L"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:text="00"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/group_team_GD"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:text="00"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/group_team_pts"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:text="00"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="match_parent" />

</LinearLayout>





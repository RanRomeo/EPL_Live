<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/colorPrimaryDark"
    >




    <Button
        android:id="@+id/butto_player_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Player Stats"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:background="@drawable/round_shape_button"
        android:layout_margin="2dp"
        android:paddingStart="5dp"
        android:textColor="@color/colorPrimaryDark"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        />

    <Button
        android:id="@+id/culb_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Club Stats"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:background="@drawable/round_shape_button"
        android:layout_margin="2dp"
        android:paddingStart="5dp"
        android:textColor="@color/colorPrimaryDark"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        />



    <Button
        android:id="@+id/team_compare_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Team Compare"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:background="@drawable/round_shape_button"
        android:layout_margin="2dp"
        android:paddingStart="5dp"
        android:textColor="@color/colorPrimaryDark"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="More"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorPrimary"
        android:gravity="start"
        android:layout_margin="10dp"
        />

    <Button
        android:id="@+id/fav_team_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Favourite Team"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:background="@drawable/round_shape_button"
        android:layout_margin="2dp"
        android:paddingStart="5dp"
        android:textColor="@color/colorPrimaryDark"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        />

    <Button
        android:id="@+id/notification_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:background="@drawable/round_shape_button"
        android:layout_margin="2dp"
        android:paddingStart="5dp"
        android:textColor="@color/colorPrimaryDark"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        />


    <Button
        android:id="@+id/share_app_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share App"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:background="@drawable/round_shape_button"
        android:layout_margin="2dp"
        android:paddingStart="5dp"
        android:textColor="@color/colorPrimaryDark"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        />

    <Button
        android:id="@+id/Rate_app_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rate App"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:background="@drawable/round_shape_button"
        android:layout_margin="2dp"
        android:paddingStart="5dp"
        android:textColor="@color/colorPrimaryDark"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        />

    <Button
        android:id="@+id/copy_right_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CopyRight Issue"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:background="@drawable/round_shape_button"
        android:layout_margin="2dp"
        android:paddingStart="5dp"
        android:textColor="@color/colorPrimaryDark"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        />

    <Button
        android:id="@+id/privacy_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Privacy Polices"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:background="@drawable/round_shape_button"
        android:layout_margin="2dp"
        android:paddingStart="5dp"
        android:textColor="@color/colorPrimaryDark"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        />








</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Season so for"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:background="@color/colorStart"
        android:fontFamily="monospace"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/season_home_team_name"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Everton"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginEnd="8dp"
                />

            <ImageView
                android:id="@+id/season_home_team_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_logo_arsenal_club" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="right">

            <ImageView
                android:id="@+id/season_away_team_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_logo_arsenal_club" />

            <TextView
                android:id="@+id/season_away_team_name"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginStart="6dp"
                android:text="Everton" />


        </LinearLayout>


    </LinearLayout>


    <!--Position-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Position"
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="1"
            android:layout_height="25dp">

            <TextView
                android:id="@+id/position_home_team"
                android:text="0"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:textAlignment="textEnd"
                android:layout_marginRight="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/position_away_team"
                android:text="0"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_marginLeft="5dp"
                android:textAlignment="textStart"
                android:layout_height="match_parent" />

        </LinearLayout>

        <!--Progress Bar-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="1"
            android:layout_height="30dp">
            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:id="@+id/progress_position_home_team"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:max="0"
                android:progressDrawable="@drawable/custom_progressbar_horizontal"
                android:layout_margin="2dp"
                android:layoutDirection="rtl"
                android:progress="0" />

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:id="@+id/progress_position_away_team"
                android:progressDrawable="@drawable/custom_progressbar_horizontal"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:max="0"
                android:layout_margin="2dp"
                android:progress="0" />

        </LinearLayout>

    </LinearLayout>
    <!--wons-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Won"
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="1"
            android:layout_height="25dp">

            <TextView
                android:id="@+id/position_home_team_won"
                android:text="0"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:textAlignment="textEnd"
                android:layout_marginRight="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/position_away_team_away"
                android:text="0"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_marginLeft="5dp"
                android:textAlignment="textStart"
                android:layout_height="match_parent" />

        </LinearLayout>

        <!--Progress Bar-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="1"
            android:layout_height="30dp">
            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:id="@+id/progress_won_team_home"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:max="0"
                android:progressDrawable="@drawable/custom_progressbar_horizontal"
                android:layout_margin="2dp"
                android:layoutDirection="rtl"
                android:progress="0" />

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:id="@+id/progress_won_away_team"
                android:progressDrawable="@drawable/custom_progressbar_horizontal"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:max="0"
                android:layout_margin="2dp"
                android:progress="0" />

        </LinearLayout>

    </LinearLayout>
    <!--Draw-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Draw"
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="1"
            android:layout_height="25dp">

            <TextView
                android:id="@+id/position_home_team_draw"
                android:text="0"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:textAlignment="textEnd"
                android:layout_marginRight="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/position_away_team_draw"
                android:text="0"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_marginLeft="5dp"
                android:textAlignment="textStart"
                android:layout_height="match_parent" />

        </LinearLayout>

        <!--Progress Bar-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="1"
            android:layout_height="30dp">
            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:id="@+id/progress_draw_team_home"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:max="0"
                android:progressDrawable="@drawable/custom_progressbar_horizontal"
                android:layout_margin="2dp"
                android:layoutDirection="rtl"
                android:progress="0" />

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:id="@+id/progress_draw_away_team"
                android:progressDrawable="@drawable/custom_progressbar_horizontal"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:max="0"
                android:layout_margin="2dp"
                android:progress="0" />

        </LinearLayout>

    </LinearLayout>
    <!--Lost-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Lost"
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="1"
            android:layout_height="25dp">

            <TextView
                android:id="@+id/position_home_team_lost"
                android:text="0"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:textAlignment="textEnd"
                android:layout_marginRight="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/position_away_team_lost"
                android:text="0"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_marginLeft="5dp"
                android:textAlignment="textStart"
                android:layout_height="match_parent" />

        </LinearLayout>

        <!--Progress Bar-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="1"
            android:layout_height="30dp">
            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:id="@+id/progress_lost_team_home"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:max="0"
                android:progressDrawable="@drawable/custom_progressbar_horizontal"
                android:layout_margin="2dp"
                android:layoutDirection="rtl"
                android:progress="0" />

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:id="@+id/progress_lost_away_team"
                android:progressDrawable="@drawable/custom_progressbar_horizontal"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:max="0"
                android:layout_margin="2dp"
                android:progress="0" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
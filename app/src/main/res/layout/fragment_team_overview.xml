<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="false"
    tools:context="table.football.soccer.livescore.epl.epllive.Fragment_team_deatials.Fragment_team_overview">



    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <!--Team Settings-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team Settings"
                android:visibility="gone"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textStyle="bold"
                android:textColor="#000000"
                />
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/Team_Setting_linea_layout"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="90dp"
                android:layout_marginStart="90dp"
                android:background="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/floating_fav_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    app:fabSize="mini"
                    android:clickable="true"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:backgroundTint="@color/colorPrimaryDark"
                    app:elevation="0dp"
                    android:src="@drawable/ic_favorite_border_unselect_24dp"
                    app:rippleColor="@color/colorPrimary"

                    />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/flaoting_team_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    app:fabSize="mini"
                    android:clickable="true"
                    app:rippleColor="@color/colorPrimary"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:backgroundTint="@color/colorPrimaryDark"
                    app:elevation="0dp"

                    android:src="@drawable/ic_notifications_none_black_24dp"
                    />


            </LinearLayout>

            <!--Team Visit-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vist Liverpool"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textStyle="bold"
                android:textColor="#000000"
                />
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <Button
                    android:id="@+id/button_official_web"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="5dp"
                    android:text="Official Website"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
                    android:background="@color/colorPrimaryDark"
                    />

                <Button
                    android:id="@+id/button_official_app"
                    android:text="Offical App"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:background="@color/colorPrimaryDark"
                    />

                <Button
                    android:id="@+id/button_club_ticket_info"
                    android:text="Club Ticket Information"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:background="@color/colorPrimaryDark"
                    />

                <Button
                    android:id="@+id/button_statdium"
                    android:text="Stadium Direction"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:background="@color/colorPrimaryDark"
                    />
            </LinearLayout>

            <!--Team Socail-->
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/button_facebook"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/facebook_96"
                    android:layout_margin="10dp"
                    android:scaleType="centerCrop"
                    android:background="@android:color/transparent"
                    />

                <ImageButton
                    android:id="@+id/button_twiiter"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/twiiter_96"
                    android:scaleType="centerCrop"
                    android:layout_margin="10dp"
                    android:background="@android:color/transparent"
                    />

                <ImageButton
                    android:id="@+id/button_instagram"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/instagram_100"
                    android:scaleType="centerCrop"
                    android:layout_margin="10dp"
                    android:background="@android:color/transparent"
                    />


                <ImageButton
                    android:id="@+id/button_youtube"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/youutbe_96"
                    android:scaleType="centerCrop"
                    android:background="@android:color/transparent"
                    />



            </LinearLayout>


            <include
                layout="@layout/nested_team_detail_overview_shrits"
                />


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>







</android.support.v4.widget.SwipeRefreshLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="250dp"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/live_match_time"
        android:gravity="center"
        android:textColor="@color/colorBox"
        android:text="00'"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:gravity="center"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="0.35"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/homeTeam_image_live"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_logo_arsenal_club"
                />

            <TextView
                android:id="@+id/homeTeam_name_live"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arsenal"
                android:gravity="center"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/colorText"
                />




        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent">


            <TextView
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/homeTeamScoreLive"
                android:text="2"
                android:textColor="@color/colorText"
                android:padding="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                />


            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=":"
                android:textStyle="bold"

                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                />

            <TextView
                android:textStyle="bold"
                android:padding="10dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/away_team_score_live"
                android:text="2"
                android:textColor="@color/colorText"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                />



        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="0.35"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/awayTeam_image_live"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_logo_arsenal_club"
                />

            <TextView
                android:id="@+id/awayTeam_name_live"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Arsenal"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/colorText"
                />




        </LinearLayout>

    </LinearLayout>



</LinearLayout>
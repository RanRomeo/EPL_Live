<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/colorText"
    >


    <RelativeLayout
        android:background="@drawable/black_transparent_background"
        android:layout_width="wrap_content"
        android:layout_height="200dp">


        <ImageView
            android:id="@+id/thumb_news"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:scaleType="centerCrop"
            android:src="@drawable/new_thumb"
            />
        <TextView
            android:background="@drawable/black_transparent_background"
            android:id="@+id/text_news"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="5 problems Unai Emery must address to challenge for the Premier League title "
            android:textColor="@color/colorPrimary"
            android:padding="5dp"
            android:textSize="15sp"
            android:maxLines="3"
            android:gravity="bottom"
            android:layout_alignParentBottom="true"
            />


    </RelativeLayout>


</android.support.v7.widget.CardView>
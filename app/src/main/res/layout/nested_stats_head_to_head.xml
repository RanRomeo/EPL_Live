<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >

        <TextView
            android:id="@+id/team_A_stat_name"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:text="Japan"
            android:textSize="25sp"
            android:layout_marginRight="3dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/team_B_stat_name"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:text="Heroshima"
            android:textAlignment="textEnd"
            android:textSize="25sp"
            android:layout_marginLeft="3dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Played:"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginEnd="10dp"
            />

        <TextView
            android:id="@+id/played_text"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="0"
            android:textStyle="bold"
            android:layout_marginEnd="15dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Draw:"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginEnd="10dp"
            />

        <TextView
            android:id="@+id/draw_text"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="0"
            android:textStyle="bold"
            android:layout_marginEnd="15dp"
            />

    </LinearLayout>

    <!--Total Wins-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Total Wins"
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="1"
            android:layout_height="25dp">

            <TextView
                android:id="@+id/total_wins_home_team"
                android:text="0"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:textAlignment="textEnd"
                android:layout_marginRight="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/total_wins_away_team"
                android:text="0"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_marginLeft="5dp"
                android:textAlignment="textStart"
                android:layout_height="match_parent" />

        </LinearLayout>

        <!--Progress Bar-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="1"
            android:layout_height="30dp">
            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:id="@+id/progress_total_wins_home_team"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:max="0"
                android:progressDrawable="@drawable/custom_progressbar_horizontal"
                android:layout_margin="2dp"
                android:layoutDirection="rtl"
                android:progress="0" />

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:id="@+id/progress_total_away_team"
                android:progressDrawable="@drawable/custom_progressbar_horizontal"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:max="0"
                android:layout_margin="2dp"
                android:progress="0" />

        </LinearLayout>

    </LinearLayout>
    <!--Home-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Home"
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="1"
            android:layout_height="25dp">

            <TextView
                android:id="@+id/home_wins_home_team"
                android:text="0"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:textAlignment="textEnd"
                android:layout_marginRight="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/home_wins_away_team"
                android:text="0"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_marginLeft="5dp"
                android:textAlignment="textStart"
                android:layout_height="match_parent" />

        </LinearLayout>

        <!--Progress Bar-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="1"
            android:layout_height="30dp">
            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:id="@+id/progress_home_wins_home_team"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:max="0"
                android:progressDrawable="@drawable/custom_progressbar_horizontal"
                android:layout_margin="2dp"
                android:layoutDirection="rtl"
                android:progress="0" />

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:id="@+id/progress_home_wins_away_team"
                android:progressDrawable="@drawable/custom_progressbar_horizontal"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:max="0"
                android:layout_margin="2dp"
                android:progress="0" />

        </LinearLayout>

    </LinearLayout>
    <!--away-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Away"
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="1"
            android:layout_height="25dp">

            <TextView
                android:id="@+id/away_wins_home_team"
                android:text="0"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:textAlignment="textEnd"
                android:layout_marginRight="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/away_wins_away_team"
                android:text="0"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_marginLeft="5dp"
                android:textAlignment="textStart"
                android:layout_height="match_parent" />

        </LinearLayout>

        <!--Progress Bar-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="1"
            android:layout_height="30dp">
            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:id="@+id/progress_away_wins_home_team"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:max="0"
                android:progressDrawable="@drawable/custom_progressbar_horizontal"
                android:layout_margin="2dp"
                android:layoutDirection="rtl"
                android:progress="0" />

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:id="@+id/progress_away_wins_away_team"
                android:progressDrawable="@drawable/custom_progressbar_horizontal"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:max="0"
                android:layout_margin="2dp"
                android:progress="0" />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    tools:context="table.football.soccer.livescore.epl.epllive.Fragments.Fragment_favTeam">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:fitsSystemWindows="true">





            <LinearLayout
                android:id="@+id/club_container"
                android:orientation="vertical"
                android:layout_width="match_parent"

                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    >

                    <ImageView
                        android:id="@+id/team_image"
                        android:layout_width="60dp"
                        android:layout_height="60dp"

                        />

                    <TextView
                        android:id="@+id/team_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"

                        />


                </LinearLayout>


                <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="4dp"
                    android:layout_margin="5dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout

                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_margin="5dp"

                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Upcoming Match"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/colorText"
                            />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/Team_fixture_rec"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:visibility="gone"
                            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

                        <ProgressBar
                            android:id="@+id/upcoming_progress"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:theme="@style/AppThemeAccent_progress"
                            />

                        <LinearLayout

                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <TextView
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Recent Result"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/colorText"
                                />

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/Team_fixture_rec_result"
                                android:layout_marginTop="5dp"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
                            <ProgressBar
                                android:id="@+id/recent_progress"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:theme="@style/AppThemeAccent_progress"
                                />
                        </LinearLayout>

                        <!--Table-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Table"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/colorText"
                                />


                            <android.support.v7.widget.CardView
                                android:id="@+id/table_container"
                                app:cardCornerRadius="4dp"
                                app:cardElevation="4dp"
                                android:padding="2dp"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    >

                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="30dp"
                                        android:weightSum="6"
                                        android:background="@color/colorPrimaryDark"
                                        >

                                        <TextView
                                            android:id="@+id/group_team_no"
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:text="Pos."
                                            android:textColor="#fff"
                                            android:textAlignment="center"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:layout_height="match_parent" />

                                        <TextView
                                            android:id="@+id/group_team_name"
                                            android:layout_width="0dp"
                                            android:layout_weight="3.5"
                                            android:text="Club"
                                            android:textColor="#fff"
                                            android:textAlignment="center"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:layout_height="match_parent" />
                                        <TextView
                                            android:id="@+id/group_team_P"
                                            android:layout_width="0dp"
                                            android:layout_weight="0.5"
                                            android:text="P"
                                            android:textColor="#fff"
                                            android:textAlignment="center"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:layout_height="match_parent" />




                                        <TextView
                                            android:id="@+id/group_team_GD"
                                            android:layout_width="0dp"
                                            android:layout_weight="0.5"
                                            android:text="GD"
                                            android:textColor="#fff"
                                            android:textAlignment="center"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:layout_height="match_parent" />
                                        <TextView
                                            android:id="@+id/group_team_pts"
                                            android:layout_width="0dp"
                                            android:layout_weight="0.5"
                                            android:text="PTS"
                                            android:textColor="#fff"
                                            android:textAlignment="center"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:layout_height="match_parent" />

                                    </LinearLayout>


                                    <android.support.v7.widget.RecyclerView
                                        android:id="@+id/table_recycler"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">



                                    </android.support.v7.widget.RecyclerView>

                                </LinearLayout>



                            </android.support.v7.widget.CardView>

                            <ProgressBar
                                android:id="@+id/table_progress"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:theme="@style/AppThemeAccent_progress"
                                />

                        </LinearLayout>


                    </LinearLayout>



                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:id="@+id/banner_container"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.gms.ads.AdView
                        xmlns:ads="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/adView"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        ads:adSize="BANNER"
                        ads:adUnitId="@string/GoogleBanner_AD_Unit">
                    </com.google.android.gms.ads.AdView>


                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Latest Tweets"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:layout_margin="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    />


            </LinearLayout>








        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>




    <!--Tweests-->
    <include
        layout="@layout/nested_include_tweets"

        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        />







</android.support.design.widget.CoordinatorLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"

    tools:context="table.football.soccer.livescore.epl.epllive.Fragments.Fragment_table">


    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:id="@+id/Swipe"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/Nested_table_view"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:weightSum="6"
                        android:background="@color/colorPrimaryDark"
                        >

                        <TextView
                            android:id="@+id/group_team_no"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:text="No."
                            android:textColor="#fff"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/group_team_name"
                            android:layout_width="0dp"
                            android:layout_weight="2.5"
                            android:text="Club"
                            android:textColor="#fff"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/group_team_P"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:text="P"
                            android:textColor="#fff"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/group_team_W"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:text="W"
                            android:textColor="#fff"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/group_team_D"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:text="D"
                            android:textColor="#fff"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="match_parent" />


                        <TextView
                            android:id="@+id/group_team_L"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:text="L"
                            android:textColor="#fff"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/group_team_GD"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:text="GD"
                            android:textColor="#fff"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/group_team_pts"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:text="PTS"
                            android:textColor="#fff"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="match_parent" />

                    </LinearLayout>


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/table_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        >
                    </android.support.v7.widget.RecyclerView>




                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>

            <LinearLayout
                android:id="@+id/banner_container"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.gms.ads.AdView
                    xmlns:ads="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/adView"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    ads:adSize="SMART_BANNER"
                    ads:adUnitId="@string/GoogleBanner_AD_Unit">
                </com.google.android.gms.ads.AdView>


            </LinearLayout>


        </LinearLayout>


    </android.support.v4.widget.SwipeRefreshLayout>








</android.support.design.widget.CoordinatorLayout>

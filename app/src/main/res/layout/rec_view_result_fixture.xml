<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >


        <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5:00 PM"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />

        <TextView
            android:id="@+id/text_venue"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cardiff City Stadium,Cardiff"
            android:textColor="@color/colorPrimaryDark"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textAlignment="center"
            android:layout_gravity="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            >

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="0.39"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/home_team_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_logo_arsenal_club"
                    />

                <TextView
                    android:id="@+id/text_home_team_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arsenal"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    />



            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_weight="0.22"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_game_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FT"
                    android:visibility="visible"
                    android:layout_gravity="center"
                    android:textColor="#04ff00"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_home_team_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:layout_margin="5dp"
                        android:paddingEnd="2dp"
                        android:paddingStart="2dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="@color/colorPrimaryDark"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:layout_margin="5dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        />
                    <TextView
                        android:id="@+id/text_away_team_score"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="2"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:textAlignment="center"

                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="@color/colorPrimaryDark"
                        />
                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="0.39"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/away_team_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_logo_arsenal_club"
                    />

                <TextView
                    android:id="@+id/text_away_team_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arsenal"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    />



            </LinearLayout>

        </LinearLayout>



    </LinearLayout>



</LinearLayout>